<UserControl x:Class="MyWinFormsApp.Views.SettingsBackupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40,24,40,24">
        <StackPanel>
            <!-- Backup Section -->
            <Border CornerRadius="12" Padding="24,20"
                    Background="{DynamicResource MaterialDesign.Brush.Card}" Margin="0,0,0,16">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" Opacity="0.05" ShadowDepth="2" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="DatabaseExport" Width="22" Height="22"
                                                  VerticalAlignment="Center" Margin="0,0,10,0"
                                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock Text="Backup Database" FontSize="16" FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="Create a full backup of your database. The backup file can be used to restore your data on another machine or after reinstalling."
                               FontSize="12" Opacity="0.5" Margin="0,0,0,14" TextWrapping="Wrap"/>

                    <Button x:Name="BtnBackup" Height="42" Click="BtnBackup_Click"
                            materialDesign:ButtonAssist.CornerRadius="8" FontSize="13" HorizontalAlignment="Left">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                <Setter Property="Background" Value="#10B981"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#10B981"/>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="DatabaseExport" Width="18" Height="18"
                                                      VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Create Backup" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Restore Section -->
            <Border CornerRadius="12" Padding="24,20"
                    Background="{DynamicResource MaterialDesign.Brush.Card}" Margin="0,0,0,16">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" Opacity="0.05" ShadowDepth="2" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="DatabaseImport" Width="22" Height="22"
                                                  VerticalAlignment="Center" Margin="0,0,10,0"
                                                  Foreground="#F59E0B"/>
                        <TextBlock Text="Restore Database" FontSize="16" FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <Border CornerRadius="8" Background="#FEF2F2" Padding="12,10" Margin="0,0,0,14">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AlertOutline" Width="16" Height="16"
                                                      Foreground="#DC2626" VerticalAlignment="Top" Margin="0,2,8,0"/>
                            <TextBlock TextWrapping="Wrap" FontSize="11.5" Foreground="#991B1B">
                                <Run FontWeight="SemiBold">Warning:</Run>
                                <Run Text="Restoring a backup will overwrite ALL existing data. This action cannot be undone. Make sure you have a current backup before proceeding."/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Button x:Name="BtnRestore" Height="42" Click="BtnRestore_Click"
                            materialDesign:ButtonAssist.CornerRadius="8" FontSize="13" HorizontalAlignment="Left">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                <Setter Property="BorderBrush" Value="#F59E0B"/>
                                <Setter Property="Foreground" Value="#F59E0B"/>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="DatabaseImport" Width="18" Height="18"
                                                      VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Restore from Backup" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Status -->
            <ProgressBar x:Name="ProgressBar"
                         Style="{StaticResource MaterialDesignCircularProgressBar}"
                         IsIndeterminate="True" Visibility="Collapsed"
                         HorizontalAlignment="Center" Width="28" Height="28" Margin="0,12,0,0"/>
            <TextBlock x:Name="TxtStatus" FontSize="12" Margin="0,10,0,0"
                       HorizontalAlignment="Center" TextWrapping="Wrap" Visibility="Collapsed"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
