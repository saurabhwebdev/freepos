<UserControl x:Class="MyWinFormsApp.Views.ReturnsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="40,24,40,40">
                <materialDesign:Card Padding="24" UniformCornerRadius="12">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                <materialDesign:PackIcon Kind="CashRefund" Width="20" Height="20"
                                                          VerticalAlignment="Center" Margin="0,0,10,0" Opacity="0.7"/>
                                <TextBlock Text="Returns &amp; Credit Notes" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center"/>
                                <TextBlock x:Name="TxtCount" FontSize="12" Opacity="0.5" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </StackPanel>
                            <Button Style="{StaticResource MaterialDesignRaisedButton}" HorizontalAlignment="Right"
                                    Click="BtnNewReturn_Click" Height="36">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="New Return" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </DockPanel>

                        <!-- Header -->
                        <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1" Padding="0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="130"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Credit Note #" FontWeight="SemiBold" Opacity="0.6" FontSize="12"/>
                                <TextBlock Grid.Column="1" Text="Invoice #" FontWeight="SemiBold" Opacity="0.6" FontSize="12"/>
                                <TextBlock Grid.Column="2" Text="Customer" FontWeight="SemiBold" Opacity="0.6" FontSize="12"/>
                                <TextBlock Grid.Column="3" Text="Items" FontWeight="SemiBold" Opacity="0.6" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="Amount" FontWeight="SemiBold" Opacity="0.6" FontSize="12" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="5" Text="Status" FontWeight="SemiBold" Opacity="0.6" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="6" Text="Date" FontWeight="SemiBold" Opacity="0.6" FontSize="12" HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>

                        <ItemsControl x:Name="CreditNoteList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1"
                                            Padding="0,10" Background="Transparent">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="130"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding CreditNoteNumber}" FontSize="12" FontWeight="Medium" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding InvoiceNumber}" FontSize="12" VerticalAlignment="Center" Opacity="0.7"/>
                                            <TextBlock Grid.Column="2" Text="{Binding CustomerName}" FontSize="12" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="3" Text="{Binding ItemCount}" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="4" Text="{Binding FormattedTotal}" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Medium"/>
                                            <TextBlock Grid.Column="5" Text="{Binding StatusDisplay}" FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.7"/>
                                            <TextBlock Grid.Column="6" Text="{Binding FormattedDate}" FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Right" Opacity="0.5"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <ProgressBar x:Name="ProgressLoad" Style="{StaticResource MaterialDesignCircularProgressBar}"
                                     IsIndeterminate="True" Visibility="Collapsed" HorizontalAlignment="Center"
                                     Margin="0,20,0,0" Width="32" Height="32"/>
                        <TextBlock x:Name="TxtEmpty" Text="No returns yet."
                                   FontSize="12" Opacity="0.5" TextAlignment="Center" Margin="0,20,0,0" Visibility="Collapsed"/>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- New Return Modal -->
        <Grid x:Name="OverlayEdit" Visibility="Collapsed">
            <materialDesign:Card x:Name="EditCard" MinWidth="700" MaxWidth="800" Padding="32" UniformCornerRadius="16">
                <StackPanel>
                    <DockPanel Margin="0,0,0,16">
                        <TextBlock Text="Process Return" Style="{StaticResource MaterialDesignHeadline6TextBlock}" DockPanel.Dock="Left"/>
                        <Button Style="{StaticResource MaterialDesignIconForegroundButton}" HorizontalAlignment="Right"
                                Click="BtnCancel_Click" Padding="4" Height="32" Width="32">
                            <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                        </Button>
                    </DockPanel>

                    <!-- Invoice lookup -->
                    <DockPanel Margin="0,0,0,12">
                        <TextBox x:Name="TxtInvoiceSearch" DockPanel.Dock="Left" Width="300"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Invoice Number" FontSize="14"/>
                        <Button Style="{StaticResource MaterialDesignRaisedButton}" Click="BtnLookup_Click"
                                Margin="8,0,0,0" Height="40" VerticalAlignment="Bottom">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Magnify" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Text="Lookup" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </DockPanel>

                    <!-- Invoice info -->
                    <Border x:Name="InvoiceInfoPanel" Visibility="Collapsed"
                            BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1" CornerRadius="8"
                            Padding="16,10" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock x:Name="TxtInvoiceInfo" FontSize="12" FontWeight="Medium"/>
                            <TextBlock x:Name="TxtInvoiceDetails" FontSize="11" Opacity="0.6"/>
                        </StackPanel>
                    </Border>

                    <!-- Return items -->
                    <TextBlock Text="Select items to return:" FontSize="12" FontWeight="Medium" Margin="0,0,0,8"
                               x:Name="TxtItemsLabel" Visibility="Collapsed"/>
                    <ItemsControl x:Name="ReturnItemsList"/>

                    <!-- Reason -->
                    <TextBox x:Name="TxtReason" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Reason for return" FontSize="14" Margin="0,12,0,12"
                             TextWrapping="Wrap" MinHeight="50" AcceptsReturn="True"/>

                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Button x:Name="BtnProcess" Style="{StaticResource MaterialDesignRaisedButton}"
                                Click="BtnProcess_Click" Margin="0,0,12,0" Height="40" IsEnabled="False">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CashRefund" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="PROCESS RETURN" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}" Click="BtnCancel_Click" Height="40">
                            <TextBlock Text="CANCEL"/>
                        </Button>
                        <ProgressBar x:Name="ProgressSave" Style="{StaticResource MaterialDesignCircularProgressBar}"
                                     IsIndeterminate="True" Visibility="Collapsed" VerticalAlignment="Center"
                                     Width="28" Height="28" Margin="12,0,0,0"/>
                    </StackPanel>
                    <TextBlock x:Name="TxtMessage" FontSize="12" TextWrapping="Wrap" Margin="0,12,0,0" Visibility="Collapsed"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
