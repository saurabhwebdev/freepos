<UserControl x:Class="MyWinFormsApp.Views.PurchaseOrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="40,24,40,40">
                <materialDesign:Card Padding="24" UniformCornerRadius="12">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                <materialDesign:PackIcon Kind="ClipboardTextOutline" Width="20" Height="20"
                                                          VerticalAlignment="Center" Margin="0,0,10,0" Opacity="0.7"/>
                                <TextBlock Text="Purchase Orders" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center"/>
                                <TextBlock x:Name="TxtCount" FontSize="12" Opacity="0.5" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </StackPanel>
                            <Button Style="{StaticResource MaterialDesignRaisedButton}" HorizontalAlignment="Right"
                                    Click="BtnNewPO_Click" Height="36">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="New PO" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </DockPanel>

                        <!-- Header -->
                        <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1" Padding="0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="PO #" FontWeight="SemiBold" Opacity="0.6" FontSize="12"/>
                                <TextBlock Grid.Column="1" Text="Supplier" FontWeight="SemiBold" Opacity="0.6" FontSize="12"/>
                                <TextBlock Grid.Column="2" Text="Items" FontWeight="SemiBold" Opacity="0.6" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="Amount" FontWeight="SemiBold" Opacity="0.6" FontSize="12" HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="4" Text="Status" FontWeight="SemiBold" Opacity="0.6" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="5" Text="Expected" FontWeight="SemiBold" Opacity="0.6" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="6" Text="Created" FontWeight="SemiBold" Opacity="0.6" FontSize="12" HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>

                        <ItemsControl x:Name="PoList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1"
                                            Padding="0,10" Cursor="Hand" MouseLeftButtonUp="Row_Click" Tag="{Binding Id}"
                                            Background="Transparent">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding PoNumber}" FontSize="12" FontWeight="Medium" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding SupplierName}" FontSize="12" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="{Binding ItemCount}" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="3" Text="{Binding FormattedTotal}" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Medium"/>
                                            <TextBlock Grid.Column="4" Text="{Binding StatusDisplay}" FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="5" Text="{Binding ExpectedDateDisplay}" FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.6"/>
                                            <TextBlock Grid.Column="6" Text="{Binding FormattedDate}" FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Right" Opacity="0.5"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <ProgressBar x:Name="ProgressLoad" Style="{StaticResource MaterialDesignCircularProgressBar}"
                                     IsIndeterminate="True" Visibility="Collapsed" HorizontalAlignment="Center"
                                     Margin="0,20,0,0" Width="32" Height="32"/>
                        <TextBlock x:Name="TxtEmpty" Text="No purchase orders yet."
                                   FontSize="12" Opacity="0.5" TextAlignment="Center" Margin="0,20,0,0" Visibility="Collapsed"/>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- New PO Modal -->
        <Grid x:Name="OverlayEdit" Visibility="Collapsed">
            <materialDesign:Card x:Name="EditCard" MinWidth="700" MaxWidth="850" Padding="32" UniformCornerRadius="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="600">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,16">
                            <TextBlock x:Name="TxtEditTitle" Text="New Purchase Order"
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}" DockPanel.Dock="Left"/>
                            <Button Style="{StaticResource MaterialDesignIconForegroundButton}" HorizontalAlignment="Right"
                                    Click="BtnCancel_Click" Padding="4" Height="32" Width="32">
                                <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                            </Button>
                        </DockPanel>

                        <!-- Supplier -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="CmbSupplier" Grid.Column="0"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      materialDesign:HintAssist.Hint="Supplier"
                                      DisplayMemberPath="Name" FontSize="14"/>
                            <DatePicker x:Name="DpExpected" Grid.Column="2"
                                        Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                        materialDesign:HintAssist.Hint="Expected Date" FontSize="14"/>
                        </Grid>

                        <!-- Notes -->
                        <TextBox x:Name="TxtNotes" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Notes (optional)" FontSize="14" Margin="0,0,0,12"
                                 TextWrapping="Wrap" MinHeight="40" AcceptsReturn="True"/>

                        <!-- Add Item Row -->
                        <TextBlock Text="Items:" FontWeight="Medium" FontSize="13" Margin="0,0,0,8"/>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="CmbProduct" Grid.Column="0"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      materialDesign:HintAssist.Hint="Product"
                                      DisplayMemberPath="Name" FontSize="12" Padding="6,4"
                                      IsEditable="True"/>
                            <TextBox x:Name="TxtItemQty" Grid.Column="1" Margin="8,0,0,0"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="Qty" FontSize="12" Padding="6,4"/>
                            <TextBox x:Name="TxtItemPrice" Grid.Column="2" Margin="8,0,0,0"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="Unit Price" FontSize="12" Padding="6,4"/>
                            <Button Grid.Column="3" Style="{StaticResource MaterialDesignRaisedButton}"
                                    Click="BtnAddItem_Click" Margin="8,0,0,0" Height="36" Width="36" Padding="0">
                                <materialDesign:PackIcon Kind="Plus"/>
                            </Button>
                        </Grid>

                        <!-- Items List -->
                        <ItemsControl x:Name="PoItemsList"/>

                        <!-- Total -->
                        <TextBlock x:Name="TxtTotal" FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,8,0,0"/>

                        <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                            <Button x:Name="BtnSave" Style="{StaticResource MaterialDesignRaisedButton}"
                                    Click="BtnSave_Click" Margin="0,0,12,0" Height="40">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="CREATE PO" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignOutlinedButton}" Click="BtnCancel_Click" Height="40">
                                <TextBlock Text="CANCEL"/>
                            </Button>
                            <ProgressBar x:Name="ProgressSave" Style="{StaticResource MaterialDesignCircularProgressBar}"
                                         IsIndeterminate="True" Visibility="Collapsed" VerticalAlignment="Center"
                                         Width="28" Height="28" Margin="12,0,0,0"/>
                        </StackPanel>
                        <TextBlock x:Name="TxtMessage" FontSize="12" TextWrapping="Wrap" Margin="0,12,0,0" Visibility="Collapsed"/>
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
