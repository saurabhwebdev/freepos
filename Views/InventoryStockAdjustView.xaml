<UserControl x:Class="MyWinFormsApp.Views.InventoryStockAdjustView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="40,24,40,40">
                <materialDesign:Card Padding="24" UniformCornerRadius="12">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                <materialDesign:PackIcon Kind="PackageVariantClosedPlus" Width="20" Height="20"
                                                          VerticalAlignment="Center" Margin="0,0,10,0" Opacity="0.7"/>
                                <TextBlock Text="Stock Adjustments" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button Style="{StaticResource MaterialDesignRaisedButton}" HorizontalAlignment="Right"
                                    Click="BtnNewAdjust_Click" Height="36">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="New Adjustment" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </DockPanel>

                        <!-- Recent movements header -->
                        <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1" Padding="0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="130"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Product" FontWeight="SemiBold" Opacity="0.6" FontSize="12"/>
                                <TextBlock Grid.Column="1" Text="Type" FontWeight="SemiBold" Opacity="0.6" FontSize="12"/>
                                <TextBlock Grid.Column="2" Text="Qty" FontWeight="SemiBold" Opacity="0.6" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="Before" FontWeight="SemiBold" Opacity="0.6" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="After" FontWeight="SemiBold" Opacity="0.6" FontSize="12" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="5" Text="Reference" FontWeight="SemiBold" Opacity="0.6" FontSize="12"/>
                                <TextBlock Grid.Column="6" Text="Date" FontWeight="SemiBold" Opacity="0.6" FontSize="12" HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>

                        <ItemsControl x:Name="MovementList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1"
                                            Padding="0,8" Background="Transparent">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="70"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="130"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding ProductName}" FontSize="12" FontWeight="Medium" VerticalAlignment="Center"/>
                                            <Border Grid.Column="1" CornerRadius="8" Padding="4,2" VerticalAlignment="Center" HorizontalAlignment="Left">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding MovementType}" Value="OUT">
                                                                <Setter Property="Background" Value="#FEF2F2"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding MovementType}" Value="ADJUSTMENT">
                                                                <Setter Property="Background" Value="#FFF8E1"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding MovementTypeDisplay}" FontSize="10" FontWeight="Medium"/>
                                            </Border>
                                            <TextBlock Grid.Column="2" Text="{Binding QuantityDisplay}" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <TextBlock Grid.Column="3" Text="{Binding PreviousStock, StringFormat=\{0:0.##\}}" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.5"/>
                                            <TextBlock Grid.Column="4" Text="{Binding NewStock, StringFormat=\{0:0.##\}}" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Medium"/>
                                            <TextBlock Grid.Column="5" Text="{Binding Reference}" FontSize="11" VerticalAlignment="Center" Opacity="0.6" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Grid.Column="6" Text="{Binding FormattedDate}" FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Right" Opacity="0.5"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <ProgressBar x:Name="ProgressLoad" Style="{StaticResource MaterialDesignCircularProgressBar}"
                                     IsIndeterminate="True" Visibility="Collapsed" HorizontalAlignment="Center"
                                     Margin="0,20,0,0" Width="32" Height="32"/>
                        <TextBlock x:Name="TxtEmpty" Text="No stock movements yet."
                                   FontSize="12" Opacity="0.5" TextAlignment="Center" Margin="0,20,0,0" Visibility="Collapsed"/>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- New Adjustment Modal -->
        <Grid x:Name="OverlayEdit" Visibility="Collapsed">
            <materialDesign:Card x:Name="EditCard" MinWidth="500" Padding="32" UniformCornerRadius="16">
                <StackPanel>
                    <DockPanel Margin="0,0,0,16">
                        <TextBlock Text="Stock Adjustment" Style="{StaticResource MaterialDesignHeadline6TextBlock}" DockPanel.Dock="Left"/>
                        <Button Style="{StaticResource MaterialDesignIconForegroundButton}" HorizontalAlignment="Right"
                                Click="BtnCancel_Click" Padding="4" Height="32" Width="32">
                            <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                        </Button>
                    </DockPanel>

                    <ComboBox x:Name="CmbProduct" Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Product" DisplayMemberPath="Name"
                              FontSize="14" Margin="0,0,0,12" IsEditable="True"/>

                    <ComboBox x:Name="CmbType" Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Adjustment Type"
                              FontSize="14" Margin="0,0,0,12">
                        <ComboBoxItem Content="Stock In (Add)" Tag="IN"/>
                        <ComboBoxItem Content="Stock Out (Remove)" Tag="OUT"/>
                        <ComboBoxItem Content="Set Stock (Absolute)" Tag="ADJUSTMENT"/>
                    </ComboBox>

                    <TextBox x:Name="TxtQuantity" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Quantity" FontSize="14" Margin="0,0,0,12"/>

                    <TextBox x:Name="TxtReference" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Reference (e.g. count, damage, etc.)" FontSize="14" Margin="0,0,0,12"/>

                    <TextBox x:Name="TxtNotes" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Notes (optional)" FontSize="14" Margin="0,0,0,12"
                             TextWrapping="Wrap" MinHeight="40" AcceptsReturn="True"/>

                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Button x:Name="BtnSave" Style="{StaticResource MaterialDesignRaisedButton}"
                                Click="BtnSave_Click" Margin="0,0,12,0" Height="40">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ContentSave" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="ADJUST STOCK" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}" Click="BtnCancel_Click" Height="40">
                            <TextBlock Text="CANCEL"/>
                        </Button>
                        <ProgressBar x:Name="ProgressSave" Style="{StaticResource MaterialDesignCircularProgressBar}"
                                     IsIndeterminate="True" Visibility="Collapsed" VerticalAlignment="Center"
                                     Width="28" Height="28" Margin="12,0,0,0"/>
                    </StackPanel>
                    <TextBlock x:Name="TxtMessage" FontSize="12" TextWrapping="Wrap" Margin="0,12,0,0" Visibility="Collapsed"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
